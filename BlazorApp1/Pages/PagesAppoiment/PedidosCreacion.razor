@page "/pedidoscreacion"
<h3>PedidosCreacion</h3>

<select @bind="SelectedNombre">
    <option value="">--Seleccione--</option>
    @foreach (var item in Opciones)
    {
        <option value="@item.Nombre">@item.Nombre</option>
    }
</select>

<p>Seleccionaste: @SelectedNombre</p>

@code {
    private string SelectedNombre { get; set; } = "";

    private List<Opcion> Opciones = new()
    {
        new Opcion { Id = "1", Nombre = "Opción A" },
        new Opcion { Id = "2", Nombre = "Opción B" },
        new Opcion { Id = "3", Nombre = "Opción C" }
    };

    private class Opcion
    {
        public string Id { get; set; }
        public string Nombre { get; set; }
    }
}